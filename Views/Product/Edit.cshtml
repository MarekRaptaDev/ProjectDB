@model ProjektDb.Models.Product


@if (Model is null)
{
    <p>No student with this Id was found</p>
}
else
{



    <div class="container mt-5">
        <h1 class="mb-4">Edit Product</h1>
        <form method="post" class="p-4 border rounded bg-light">
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Product Name</label>
                <input type="text"
                id="Name"
                name="Name"
                class="form-control"
                placeholder="Enter product name"
                required
                asp-for="Name" />
            </div>
            <div class="form-group mb-3">
                <label for="Description" class="form-label">Product Description</label>
                <textarea id="Description"
                name="Description"
                class="form-control"
                rows="4"
                placeholder="Enter product description"
                asp-for="Description"></textarea>
            </div>
            <div class="form-group mb-4">
                <label for="Price" class="form-label">Product Price</label>
                <input type="number"
                id="Price"
                name="Price"
                class="form-control"
                placeholder="Enter product price"
                step="0.01"
                required
                asp-for="Price" />
            </div>

            <!-- Display CreatedAt and DeletedAt -->
            <div class="form-group mb-3">
                <label for="CreatedAt" class="form-label">Created At</label>
                <input type="text"
                id="CreatedAt"
                name="CreatedAt"
                class="form-control"
                readonly
                value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")" />
            </div>
            <div class="form-group mb-3">
                <label for="DeletedAt" class="form-label">Deleted At</label>
                <input type="text"
                id="DeletedAt"
                name="DeletedAt"
                class="form-control"
                readonly
                value="@Model.DeletedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? " Not deleted"" />
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
}